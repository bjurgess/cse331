#ifndef _VERIFYSORT_H_
#define _VERIFYSORT_H_

#include <vector>

template<class T>
class CVerifySort{
public:
  bool VerifySort(std::vector<T> *p_vec){
    int i=0;
    int j = 1;
    bool flag = false;
    

    while( (*p_vec)[i++] < (*p_vec)[j++] && j < (*p_vec).size())
      {
      }

    if( j == (*p_vec).size() )
      {
	flag = true;
      }

    return flag;
  }
  
};

#endif
